{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"moduleResolution": "node",
		"jsx": "react",
		"allowJs": true,
		"baseUrl": "./",
		"typeRoots": [
			"node_modules/@types",
			"src/types"
		],
		"paths": {
			"@src/*" : [
				"src/*"
			],
			"@model/*" : [
				"src/model/*"
			],
			"@service/*" : [
				"src/service/*"
			],
			"@view/*" : [
				"src/view/*"
			],
			"@resource/*" : [
				"src/resource/*"
			]
		}
	}
}